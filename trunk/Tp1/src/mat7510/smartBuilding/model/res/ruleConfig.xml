<?xml version="1.0" encoding="UTF-8"?>

<smartBuildingRules>

	<rule ordered="no" continuous="no" enabled="yes">
		
		<ruleID>X000001</ruleID>
		<ruleDescription>Apertura Puerta Central</ruleDescription>
		
		<action>
			<deviceDriverID>Puerta-Central-PB</deviceDriverID>
			<actionName>open</actionName>
		</action>
		<events>
			<event>
				<deviceDriverID>CENTRAL-CLOCK</deviceDriverID>
				<eventName>Morning</eventName>
			</event>
<!--			<event>-->
<!--				<deviceDriverID>DETECTOR-MOVIMIENTO-PB-0023</deviceDriverID>-->
<!--				<eventName>open</eventName>-->
<!--			</event>-->
<!--			<event>-->
<!--				<deviceDriverID>DETECTOR-MOVIMIENTO-PB-0025</deviceDriverID>-->
<!--				<eventName>hayMovimiento</eventName>-->
<!--			</event>-->
		</events>
	
	</rule>

	<rule ordered="yes" continuous="no" enabled="no">

		<ruleID>X000002</ruleID>
		<ruleDescription>Encendido Aire Acondicionado Piso 24 Hab 358</ruleDescription>

		<action>
			<deviceDriverID>AC-PISO24-0358</deviceDriverID>
			<actionName>TURN ON AC</actionName>
		</action>
		<events>
			<event>
				<deviceDriverID>CENTRAL-CLOCK</deviceDriverID>
				<eventName>Morning</eventName>
			</event>
<!--			<event>-->
<!--				<deviceDriverID>TERMOMETRO-PISO24</deviceDriverID>-->
<!--				<eventName>temperaturaCalida</eventName>-->
<!--			</event>-->
		</events>

	</rule>

	<rule ordered="no" continuous="no" enabled="yes">

		<ruleID>X000003</ruleID>
		<ruleDescription>Encendido Luces Pasillos</ruleDescription>

		<action>
			<deviceDriverID>LUCES-PASILLOS</deviceDriverID>
			<actionName>Lights On</actionName>
		</action>
		<events>
<!--			<event>-->
<!--				<deviceDriverID>ASCENSOR</deviceDriverID>-->
<!--				<eventName>llegando</eventName>-->
<!--			</event>-->
			<event>
				<deviceDriverID>CENTRAL-CLOCK</deviceDriverID>
				<eventName>Evening</eventName>
			</event>
			<event>
				<deviceDriverID>Puerta-Central-PB</deviceDriverID>
				<eventName>Door Opened</eventName>
			</event>
		</events>
	
	</rule>
	
</smartBuildingRules>
